<?xml version="1.0" encoding="UTF-8"?>
<cache xmlns="http://geode.apache.org/schema/cache" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://geode.apache.org/schema/cache http://geode.apache.org/schema/cache/cache-1.0.xsd" version="1.0">

	<disk-store name="pdx">
		<disk-dirs>
			<disk-dir>./pdx</disk-dir>
		</disk-dirs>
	</disk-store>

	<disk-store name="data">
		<disk-dirs>
			<disk-dir>./data</disk-dir>
		</disk-dirs>
	</disk-store>

	<pdx disk-store-name="pdx" persistent="true" read-serialized="true">
		<pdx-serializer>
			<class-name>
                org.apache.geode.pdx.ReflectionBasedAutoSerializer
            </class-name>
			<parameter name="classes">
				<string>io.pivotal.gemfire.sample.common.entity.*</string>
			</parameter>
		</pdx-serializer>
	</pdx>

	<region name="Cat">
		<region-attributes refid="REPLICATE_PERSISTENT_OVERFLOW" disk-store-name="data" />
		<!--region-attributes refid="REPLICATE" /-->
	</region>

	<region name="Dog">
		<region-attributes refid="REPLICATE_PERSISTENT_OVERFLOW" disk-store-name="data" />
		<!--region-attributes refid="REPLICATE" /-->
	</region>
    
    <resource-manager eviction-heap-percentage="70" critical-heap-percentage="80" />

</cache>
